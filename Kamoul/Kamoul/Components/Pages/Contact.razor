@page "/contact"

<PageTitle>Contact - Kamoul</PageTitle>

<div class="container-fluid">
    <div class="row">
        <div class="col-12">
            <div class="contact-card">
                <h1 class="contact-title">Contactez-nous</h1>
                <p class="contact-subtitle">Des questions sur les règles du jeu KAMOUL ? Nous sommes là pour vous aider !</p>
                
                <div class="contact-info">
                    <div class="info-item">
                        <i class="bi bi-telephone-fill"></i>
                        <div class="info-content">
                            <h4>Téléphone</h4>
                            <a href="tel:+33123456789" class="contact-link">+33 1 23 45 67 89</a>
                        </div>
                    </div>
                    <div class="info-item">
                        <i class="bi bi-envelope-fill"></i>
                        <div class="info-content">
                            <h4>Email</h4>
                            <a href="mailto:contact@kamoul.fr" class="contact-link">contact@kamoul.fr</a>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>
